{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "status",
        "data"
    ],
    "properties": {
        "status": {
            "type": "integer"
        },
        "data": {
            "type": "object",
            "required": [
                "error"
            ],
            "properties": {
                "error": {
                    "type": "object",
                    "required": [
                        "code",
                        "message",
                        "details",
                        "innerError"
                    ],
                    "properties": {
                        "code": {
                            "type": "string"
                        },
                        "message": {
                            "type": "string"
                        },
                        "details": {
                            "type": "array"
                        },
                        "innerError": {
                            "type": "object",
                            "required": [
                                "date",
                                "request-id",
                                "client-request-id"
                            ],
                            "properties": {
                                "date": {
                                    "type": "string"
                                },
                                "request-id": {
                                    "type": "string"
                                },
                                "client-request-id": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}